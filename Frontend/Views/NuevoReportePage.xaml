<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Forntend.Views.NuevoReportePage"
             Title="Nuevo Reporte">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Título del Problema" FontSize="Medium" FontAttributes="Bold" />
        <Entry Placeholder="Ej: Fuga de agua" Text="{Binding Title}" />
        <Label Text="Descripción" FontSize="Medium" FontAttributes="Bold" />
        <Editor Placeholder="Describe el problema con detalle" HeightRequest="150" Text="{Binding Description}" />
        <Label Text="Ubicación" FontSize="Medium" FontAttributes="Bold" />
        <Entry Placeholder="Calle y número" Text="{Binding Location}" />
        <Button Text="Enviar Reporte" Command="{Binding CrearReporteCommand}" HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>